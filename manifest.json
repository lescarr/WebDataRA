{
	"manifest_version": 2,

	"name": "Web Data Research Assistant",
	"short_name": "WDRA",
	"description": "A Chrome extension that pastes data from Twitter, Google and FaceBook search results into an Excel spreadsheet.",
	"version": "2.85",
	"author": "@lescarr",

	"background": {
		"scripts": ["null.js"],
		"persistent": true
	},

	"permissions": [
          "tabs",
	  "https://dl.acm.org/*", "https://www.quora.com/*", "https://quora.com/*", "https://core.ac.uk/*", "https://github.com/search*","https://scholar.google.co.uk/*", "https://scholar.google.com/*", "https://papers.ssrn.com/*", "https://www.facebook.com/", "https://www.google.com/search*", "https://www.google.co.uk/search*", "http://twitter.com/*", "https://twitter.com/*"
	  ],

	"browser_action": {
		"default_icon": "logo.png",
		"default_popup": "popup.html"
	}
}
