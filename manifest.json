{
	"manifest_version": 2,

	"name": "Twitter RA",
	"short_name": "TwitterRA",
	"description": "A Chrome extension that analyses a Twitter conversation into an Excel spreadsheet. Also Quora.",
	"version": "0.51",
	"author": "@lescarr",

	"content_scripts": [
		{ "matches": [ "http://twitter.com/*", "https://twitter.com/*",  "https://www.quora.com/*", "https://quora.com/*"
				],
		  "js": ["payload.js"],
		  "run_at": "document_end"
		 }

		],

	"background": {
		"scripts": ["background.js"],
                "persistent": true
		},

	"browser_action": {
		"default_icon": "logo.png",
		"default_popup": "popup.html"
	}
}
